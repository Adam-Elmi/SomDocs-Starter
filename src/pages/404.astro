---
import MainLayout from "../layout/MainLayout.astro";
import { colorScheme } from "../../somdocs.config.json";
import { getTheme } from "../data/theme";
import SearchIcon from "../icons/SearchIcon.astro";
import ArrowIcon from "../icons/ArrowIcon.astro";

const theme = getTheme(colorScheme);
---

<MainLayout title="404 - Page Not Found">
    <div
        class="relative flex flex-col items-center justify-center min-h-[80vh] px-4 overflow-hidden"
    >
        <div
            class="absolute inset-0 z-0 opacity-[0.03] dark:opacity-[0.02] pointer-events-none"
            style="background-image: radial-gradient(#94a3b8 1px, transparent 1px); background-size: 32px 32px;"
        >
        </div>

        <div
            class={`absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full blur-[100px] -z-10 opacity-30 pointer-events-none bg-gradient-to-tr from-${colorScheme}-500/20 to-slate-400/5`}
        >
        </div>

        <div class="relative z-10 text-center max-w-2xl mx-auto space-y-2">
            <h1
                class={`text-[120px] sm:text-[180px] font-black leading-none tracking-tighter text-slate-200 dark:text-slate-800/80 select-none drop-shadow-sm`}
            >
                404
            </h1>

            <div class="space-y-4 -mt-10">
                <h2
                    class="text-3xl py-8 md:text-4xl font-bold text-slate-800 dark:text-slate-100 tracking-tight"
                >
                    Lost in the documentation?
                </h2>
                <p
                    class="text-slate-500 dark:text-slate-400 text-lg max-w-md mx-auto leading-relaxed"
                >
                    The page you're looking for seems to have gone missing.
                    Don't worry, even the best explorers get lost sometimes.
                </p>
            </div>

            <div
                class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4"
            >
                <a
                    href="/"
                    class={`group flex items-center gap-2 px-8 py-3.5 rounded-full font-medium text-white transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5 hover:scale-105 ${theme.activeBg} ${theme.shadow}`}
                >
                    <span>Back to Home</span>
                    <span
                        class="group-hover:translate-x-0.5 transition-transform"
                    >
                        <ArrowIcon
                            width="16"
                            height="16"
                            style="transform: rotate(45deg)"
                        />
                    </span>
                </a>

                <button
                    onclick="window.dispatchEvent(new CustomEvent('open-search'))"
                    class="group flex items-center gap-2 px-8 py-3.5 rounded-full font-medium text-slate-600 dark:text-slate-300 bg-white dark:bg-white/5 border border-slate-200 dark:border-white/10 hover:border-slate-300 dark:hover:border-white/20 hover:bg-slate-50 dark:hover:bg-white/10 transition-all hover:-translate-y-0.5"
                >
                    <SearchIcon width="18" height="18" />
                    <span>Search Docs</span>
                </button>
            </div>
        </div>
    </div>
</MainLayout>
