---
import MainLayout from "../layout/MainLayout.astro";
import Nav from "../components/Nav.astro";
import Sidebar from "../components/Sidebar.astro";
import MainFooter from "../layout/MainFooter.astro";
---

<MainLayout title="Hello">
    <div class="flex flex-col h-screen max-[900px]:h-auto">
        <Nav />
        <main class="flex flex-1 overflow-hidden">
            <Sidebar />
            <div
                class="bg-[#171e25] flex-1 flex flex-col max-[900px]:w-full overflow-auto text-amber-50"
            >
                <div id="content" class="flex flex-col flex-1 max-[900px]:min-h-screen p-4 gap-2">
                    <!-- Contents -->
                    <slot/>
                </div>
                    <MainFooter />
            </div>
        </main>
    </div>
</MainLayout>
