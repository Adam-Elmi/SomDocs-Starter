---
import MainLayout from "../layout/MainLayout.astro";
import Nav from "../components/Nav.astro";
import Sidebar from "../components/Sidebar.astro";
import PageContents from "../components/PageContents.astro";
---

<MainLayout title="Hello">
  <div class="flex flex-col fixed inset-0">
    <Nav />
    <main class="flex">
      <Sidebar />
      <div class="bg-[#101012] flex-1 p-2 max-[900px]:w-full">
        <div id="content" class="pb-20 h-screen overflow-y-auto"></div>
      </div>
      <PageContents />
    </main>
  </div>
</MainLayout>
