---
import Copy2Icon from "../icons/Copy2Icon.astro";
import TerminalIcon from "../icons/TerminalIcon.astro";
---

<div class="w-full flex items-center justify-center my-2">
    <div
        class="w-[1000px] max-w-full bg-[#101012] border-2 border-slate-800/80"
    >
        <!-- Header -->
        <div
            class="p-2 flex justify-between items-center border-b-2 border-slate-800/50"
        >
            <span class="flex gap-2 items-center text-slate-400">
                <TerminalIcon width="20" />
                Terminal
            </span>
            <button id="copy-btn-terminal" class="cursor-pointer">
                <span
                    id="copy-icon-holder-for-terminal"
                    class="hover:text-slate-500 text-slate-200"
                >
                    <Copy2Icon />
                </span>
            </button>
        </div>
        <!-- Body -->
        <div id="code-node-terminal" class="p-2 bg-[#101012] overflow-auto">
            <slot />
        </div>
    </div>
</div>

<script src="../scripts/copyText.ts"></script>
