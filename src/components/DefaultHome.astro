---
import { colorScheme } from "../../somdocs.config.json";
import { SITE } from "../constant/site";
import Nav from "./Nav.astro";
import CodeBlock from "./CodeBlock.astro";
import MainLayout from "../layout/MainLayout.astro";
import MainFooter from "../layout/MainFooter.astro";
import Sidebar from "./Sidebar.astro";

const heroGradient = `bg-gradient-to-r from-${colorScheme}-500 to-indigo-600`;
const btnPrimary = `bg-${colorScheme}-500 hover:bg-${colorScheme}-600`;
const btnSecondary = `hover:text-${colorScheme}-500`;
const backgroundPattern = `url("data:image/svg+xml,%3Csvg viewBox='0 0 1000 1000' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3CradialGradient id='b' cx='50%25' cy='50%25' r='50%25'%3E%3Cstop offset='0%25' stop-color='%236366f1' stop-opacity='0.1'/%3E%3Cstop offset='100%25' stop-color='transparent'/%3E%3C/radialGradient%3E%3CradialGradient id='a' cx='50%25' cy='50%25' r='50%25'%3E%3Cstop offset='0%25' stop-color='%23f43f5e' stop-opacity='0.1'/%3E%3Cstop offset='100%25' stop-color='transparent'/%3E%3C/radialGradient%3E%3C/defs%3E%3Crect x='-500' y='-500' width='2000' height='2000' fill='url(%23a)' transform='rotate(45 500 500)'/%3E%3Crect x='-300' y='300' width='1600' height='1600' fill='url(%23b)' transform='rotate(-45 500 500)'/%3E%3C/svg%3E")`;
---

<MainLayout title={SITE.name}>
    <div
        id="pattern"
        class="min-h-screen bg-[#FAFAFA] dark:bg-[#101012] flex flex-col relative overflow-hidden font-sans"
    >
        <div
            class="absolute inset-0 z-0 pointer-events-none opacity-[0.4] dark:opacity-[0.3]"
            style={{
                backgroundImage: backgroundPattern,
                backgroundSize: "cover",
                backgroundPosition: "center",
            }}
        >
        </div>

        <div class="relative z-10 w-full flex flex-col min-h-screen">
            <div class="min-[900px]:hidden">
                <Sidebar />
            </div>

            <Nav />

            <main
                class="flex-1 w-full max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20 lg:py-32 flex flex-col items-center"
            >
                <section
                    class="relative z-10 text-center max-w-5xl mx-auto mb-20 sm:mb-32 w-full"
                >
                    <div
                        class={`absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] sm:w-[800px] h-[300px] sm:h-[500px] bg-${colorScheme}-500/20 dark:bg-${colorScheme}-500/10 blur-[80px] sm:blur-[120px] rounded-full pointer-events-none -z-10`}
                    >
                    </div>

                    <div class="flex justify-center mb-8">
                        <div
                            class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-100/80 dark:bg-white/5 border border-slate-200 dark:border-white/10 backdrop-blur-md shadow-sm hover:scale-105 transition-transform cursor-default"
                        >
                            <span
                                class={`flex h-2 w-2 rounded-full bg-${colorScheme}-500 shadow-[0_0_12px_rgba(244,63,94,0.6)]`}
                            ></span>
                            <span
                                class="text-[10px] sm:text-xs font-bold uppercase tracking-wide text-slate-600 dark:text-slate-300"
                                >v1.0 is now live</span
                            >
                        </div>
                    </div>

                    <h1
                        class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black tracking-tight text-slate-900 dark:text-white mb-6 sm:mb-8 leading-[1.1] sm:leading-tight"
                    >
                        Documentation that <br class="hidden sm:block" />
                        <span
                            class={` text-transparent bg-clip-text ${heroGradient}`}
                            >feels like magic.</span
                        >
                    </h1>

                    <p
                        class="text-lg sm:text-xl md:text-2xl text-slate-600 dark:text-slate-400 leading-relaxed mb-10 max-w-2xl mx-auto px-2"
                    >
                        Build beautiful, high-performance documentation sites
                        with Astro, Tailwind CSS, and a touch of elegance.
                    </p>

                    <div class="flex justify-center mb-10">
                        <div
                            class="inline-flex flex-wrap justify-center items-center gap-2 px-6 py-2.5 rounded-full bg-white/50 dark:bg-white/5 border border-slate-200 dark:border-white/10 max-w-full shadow-sm"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-slate-500 dark:text-slate-400"
                                ><path d="m5 11 4 7"></path><path d="m19 11-4-7"
                                ></path><path d="M2 12h20"></path></svg
                            >
                            <span
                                class="text-xs font-bold uppercase tracking-widest text-slate-600 dark:text-slate-300"
                            >
                                Start your new project
                            </span>
                        </div>
                    </div>

                    <div
                        class="mb-10 max-w-full sm:max-w-2xl mx-auto px-0 sm:px-4 overflow-hidden rounded-xl"
                    >
                        <CodeBlock
                            code="npm create create-somdocs-starter"
                            lang="bash"
                        />
                    </div>

                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-4 w-full px-4 sm:px-0"
                    >
                        <a
                            href="/docs/introduction"
                            class={`${btnPrimary} w-full sm:w-auto px-8 py-4 rounded-full text-white font-bold text-sm uppercase tracking-wider transition-all hover:scale-105 flex justify-center items-center`}
                        >
                            Get Started
                        </a>
                        <a
                            href="https://github.com/Adam-Elmi/SomDocs-Starter"
                            target="_blank"
                            class={`w-full sm:w-auto px-8 py-4 rounded-full bg-white/80 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-slate-900 dark:text-white font-bold text-sm uppercase tracking-wider hover:bg-slate-50 dark:hover:bg-white/10 transition-all hover:scale-105 backdrop-blur-sm ${btnSecondary} flex justify-center items-center`}
                        >
                            View on GitHub
                        </a>
                    </div>
                </section>

                <section
                    class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 w-full relative z-10 px-0 sm:px-4"
                >
                    <div
                        class="group p-6 sm:p-8 rounded-3xl bg-white/60 dark:bg-white/[0.02] border border-slate-200/60 dark:border-white/5 shadow-xl shadow-slate-200/50 dark:shadow-none hover:-translate-y-1 transition-all duration-300 backdrop-blur-xl"
                    >
                        <div
                            class={`w-12 h-12 sm:w-14 sm:h-14 rounded-2xl bg-${colorScheme}-500/10 flex items-center justify-center mb-5 sm:mb-6 group-hover:scale-110 transition-transform duration-300`}
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class={`text-${colorScheme}-500 dark:text-${colorScheme}-400 sm:w-[28px] sm:h-[28px]`}
                                ><path d="M12 2v20"></path><path
                                    d="m17 5-5-3-5 3"></path><path
                                    d="m17 19-5 3-5-3"></path><path d="M2 12h20"
                                ></path></svg
                            >
                        </div>
                        <h3
                            class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white mb-2 sm:mb-3"
                        >
                            Blazing Fast
                        </h3>
                        <p
                            class="text-sm sm:text-base text-slate-500 dark:text-slate-400 leading-relaxed"
                        >
                            Powered by Astro's next-gen islands architecture.
                            Use React, Vue, or Svelte components only where you
                            need them.
                        </p>
                    </div>

                    <div
                        class="group p-6 sm:p-8 rounded-3xl bg-white/60 dark:bg-white/[0.02] border border-slate-200/60 dark:border-white/5 shadow-xl shadow-slate-200/50 dark:shadow-none hover:-translate-y-1 transition-all duration-300 backdrop-blur-xl"
                    >
                        <div
                            class={`w-12 h-12 sm:w-14 sm:h-14 rounded-2xl bg-${colorScheme}-500/10 flex items-center justify-center mb-5 sm:mb-6 group-hover:scale-110 transition-transform duration-300`}
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class={`text-${colorScheme}-500 dark:text-${colorScheme}-400 sm:w-[28px] sm:h-[28px]`}
                                ><circle cx="12" cy="12" r="5"></circle><path
                                    d="M12 1v2"></path><path d="M12 21v2"
                                ></path><path d="M4.22 4.22l1.42 1.42"
                                ></path><path d="M18.36 18.36l1.42 1.42"
                                ></path><path d="M1 12h2"></path><path
                                    d="M21 12h2"></path><path
                                    d="M4.22 19.78l1.42-1.42"></path><path
                                    d="M18.36 5.64l1.42-1.42"></path></svg
                            >
                        </div>
                        <h3
                            class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white mb-2 sm:mb-3"
                        >
                            Dark Mode Ready
                        </h3>
                        <p
                            class="text-sm sm:text-base text-slate-500 dark:text-slate-400 leading-relaxed"
                        >
                            Thoughtfully designed dark mode that's easy on the
                            eyes. Toggles seamlessly with system preferences.
                        </p>
                    </div>

                    <div
                        class="group p-6 sm:p-8 rounded-3xl bg-white/60 dark:bg-white/[0.02] border border-slate-200/60 dark:border-white/5 shadow-xl shadow-slate-200/50 dark:shadow-none hover:-translate-y-1 transition-all duration-300 backdrop-blur-xl"
                    >
                        <div
                            class={`w-12 h-12 sm:w-14 sm:h-14 rounded-2xl bg-${colorScheme}-500/10 flex items-center justify-center mb-5 sm:mb-6 group-hover:scale-110 transition-transform duration-300`}
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class={`text-${colorScheme}-500 dark:text-${colorScheme}-400 sm:w-[28px] sm:h-[28px]`}
                                ><path
                                    d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"
                                ></path><circle cx="12" cy="12" r="3"
                                ></circle></svg
                            >
                        </div>
                        <h3
                            class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white mb-2 sm:mb-3"
                        >
                            Easy Config
                        </h3>
                        <p
                            class="text-sm sm:text-base text-slate-500 dark:text-slate-400 leading-relaxed"
                        >
                            Manage your navigation, sidebar, and colors from a
                            single JSON file. No complex setup required.
                        </p>
                    </div>
                </section>
            </main>

            <MainFooter />
        </div>
    </div>
</MainLayout>
