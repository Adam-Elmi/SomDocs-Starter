---
import List from "./List.astro";

type Section = {
  name: string;
  url: string;
  show_arrow: boolean;
};

type Props = {
  sections?: Section[];
  is_small_screen?: boolean;
};

const { sections = [], is_small_screen = false } = Astro.props as Props;
---

<ul
  class={`${is_small_screen ? "hidden max-[900px]:flex p-4" : "flex max-[900px]:hidden"} gap-1 max-[900px]:flex-col max-[900px]:border-b-[1.5px] border-slate-400/15`}
>
  {
    sections.map((section) => (
      <List
        id="section"
        url={
          section.url &&
          (section.show_arrow ? "https://" + section.url : section.url)
        }
        show_arrow={section.show_arrow}
      >
        {section.name}
      </List>
    ))
  }
</ul>
