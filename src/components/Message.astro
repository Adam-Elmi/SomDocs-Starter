---
import WarnIcon from "../icons/WarnIcon.astro";
import BulbIcon from "../icons/BulbIcon.astro";
import ErrorIcon from "../icons/ErrorIcon.astro";

const { type } = Astro.props as { type: "tip" | "warning" | "error" };

const styles: Record<string, string> = {
    tip: "bg-blue-500/20 dark:text-blue-100 text-blue-800 border-[1.5px] border-blue-200 max-[500px]:text-sm",
    warning:
        "bg-yellow-500/20 dark:text-yellow-100 text-yellow-800 border-[1.5px] border-yellow-200 max-[500px]:text-sm",
    error: "bg-red-500/20 dark:text-red-100 text-red-800 border-[1.5px] border-red-200 max-[500px]:text-sm",
};
---

<div id="msg-container" class={`p-4 my-2 rounded-md shadow-md flex gap-1 ${styles[type]}`}>
    <span class="mr-2">
        {
            type === "tip" ? (
                <BulbIcon class="inline-block" />
            ) : type === "warning" ? (
                <WarnIcon />
            ) : (
                <ErrorIcon />
            )
        }
    </span>
    <div class="flex flex-col gap-2 leading-6">
          <slot />
    </div>
</div>