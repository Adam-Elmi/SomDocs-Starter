---
import config from "../../somdocs.config.json";

const { references = [] } = Astro.props;
const color = config.colorScheme || "indigo";

const THEME_STYLES = {
    indigo: {
        iconBg: "bg-indigo-500/10 dark:bg-indigo-500/20",
        iconText: "text-indigo-600 dark:text-indigo-400",
        hoverBorder:
            "group-hover:border-indigo-500/50 dark:group-hover:border-indigo-400/50",
        arrow: "text-indigo-500",
        hoverBg: "hover:bg-indigo-50 dark:hover:bg-indigo-900/10",
    },
    blue: {
        iconBg: "bg-blue-500/10 dark:bg-blue-500/20",
        iconText: "text-blue-600 dark:text-blue-400",
        hoverBorder:
            "group-hover:border-blue-500/50 dark:group-hover:border-blue-400/50",
        arrow: "text-blue-500",
        hoverBg: "hover:bg-blue-50 dark:hover:bg-blue-900/10",
    },
    teal: {
        iconBg: "bg-teal-500/10 dark:bg-teal-500/20",
        iconText: "text-teal-600 dark:text-teal-400",
        hoverBorder:
            "group-hover:border-teal-500/50 dark:group-hover:border-teal-400/50",
        arrow: "text-teal-500",
        hoverBg: "hover:bg-teal-50 dark:hover:bg-teal-900/10",
    },
    rose: {
        iconBg: "bg-rose-500/10 dark:bg-rose-500/20",
        iconText: "text-rose-600 dark:text-rose-400",
        hoverBorder:
            "group-hover:border-rose-500/50 dark:group-hover:border-rose-400/50",
        arrow: "text-rose-500",
        hoverBg: "hover:bg-rose-50 dark:hover:bg-rose-900/10",
    },
    violet: {
        iconBg: "bg-violet-500/10 dark:bg-violet-500/20",
        iconText: "text-violet-600 dark:text-violet-400",
        hoverBorder:
            "group-hover:border-violet-500/50 dark:group-hover:border-violet-400/50",
        arrow: "text-violet-500",
        hoverBg: "hover:bg-violet-50 dark:hover:bg-violet-900/10",
    },
    orange: {
        iconBg: "bg-orange-500/10 dark:bg-orange-500/20",
        iconText: "text-orange-600 dark:text-orange-400",
        hoverBorder:
            "group-hover:border-orange-500/50 dark:group-hover:border-orange-400/50",
        arrow: "text-orange-500",
        hoverBg: "hover:bg-orange-50 dark:hover:bg-orange-900/10",
    },
    green: {
        iconBg: "bg-green-500/10 dark:bg-green-500/20",
        iconText: "text-green-600 dark:text-green-400",
        hoverBorder:
            "group-hover:border-green-500/50 dark:group-hover:border-green-400/50",
        arrow: "text-green-500",
        hoverBg: "hover:bg-green-50 dark:hover:bg-green-900/10",
    },
    emerald: {
        iconBg: "bg-emerald-500/10 dark:bg-emerald-500/20",
        iconText: "text-emerald-600 dark:text-emerald-400",
        hoverBorder:
            "group-hover:border-emerald-500/50 dark:group-hover:border-emerald-400/50",
        arrow: "text-emerald-500",
        hoverBg: "hover:bg-emerald-50 dark:hover:bg-emerald-900/10",
    },
    red: {
        iconBg: "bg-red-500/10 dark:bg-red-500/20",
        iconText: "text-red-600 dark:text-red-400",
        hoverBorder:
            "group-hover:border-red-500/50 dark:group-hover:border-red-400/50",
        arrow: "text-red-500",
        hoverBg: "hover:bg-red-50 dark:hover:bg-red-900/10",
    },
    pink: {
        iconBg: "bg-pink-500/10 dark:bg-pink-500/20",
        iconText: "text-pink-600 dark:text-pink-400",
        hoverBorder:
            "group-hover:border-pink-500/50 dark:group-hover:border-pink-400/50",
        arrow: "text-pink-500",
        hoverBg: "hover:bg-pink-50 dark:hover:bg-pink-900/10",
    },
    sky: {
        iconBg: "bg-sky-500/10 dark:bg-sky-500/20",
        iconText: "text-sky-600 dark:text-sky-400",
        hoverBorder:
            "group-hover:border-sky-500/50 dark:group-hover:border-sky-400/50",
        arrow: "text-sky-500",
        hoverBg: "hover:bg-sky-50 dark:hover:bg-sky-900/10",
    },
};

const styles =
    THEME_STYLES[color as keyof typeof THEME_STYLES] || THEME_STYLES.indigo;
---

<div class="not-prose my-8">
    <div
        class="rounded-2xl border border-slate-200 dark:border-white/10 bg-slate-50/50 dark:bg-white/[0.02] shadow-sm overflow-hidden"
    >
        <div
            class="flex items-center gap-3 px-5 py-4 border-b border-slate-200/60 dark:border-white/5 bg-white/50 dark:bg-white/[0.01]"
        >
            <div
                class={`flex-shrink-0 flex items-center justify-center w-8 h-8 rounded-lg ${styles.iconBg} ${styles.iconText}`}
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m16 6 4 14"></path><path d="M12 6v14"></path><path
                        d="M8 8v12"></path><path d="M4 4v16"></path></svg
                >
            </div>
            <h3
                class="text-sm font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400"
            >
                References
            </h3>
        </div>

        <div class="p-2">
            {
                Array.isArray(references) && references.length > 0 ? (
                    <div class="flex flex-col gap-1">
                        {references.map(
                            (item: { link: string; text: string }) => (
                                <a
                                    href={item.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class={`group flex items-center justify-between px-4 py-3 rounded-xl transition-all duration-200 ${styles.hoverBg} hover:shadow-sm`}
                                >
                                    <div class="flex items-center gap-3 min-w-0">
                                        <div
                                            class={`w-1.5 h-1.5 rounded-full bg-slate-300 dark:bg-slate-600 group-hover:bg-${color}-500 transition-colors`}
                                        />
                                        <span class="font-medium text-sm text-slate-700 dark:text-slate-300 group-hover:text-slate-900 dark:group-hover:text-white transition-colors truncate">
                                            {item.text}
                                        </span>
                                    </div>
                                    <div
                                        class={`text-slate-300 dark:text-slate-600 group-hover:${styles.arrow} transition-colors opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transform duration-200`}
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                            <polyline points="15 3 21 3 21 9" />
                                            <line
                                                x1="10"
                                                y1="14"
                                                x2="21"
                                                y2="3"
                                            />
                                        </svg>
                                    </div>
                                </a>
                            ),
                        )}
                    </div>
                ) : (
                    <div class="px-4 py-8 text-center text-sm text-slate-400 italic">
                        No references available.
                    </div>
                )
            }
        </div>
    </div>
</div>
