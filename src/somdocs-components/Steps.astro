---
const { title, description } = Astro.props;
---

<div class="my-8">
    {
        title && (
            <h3 class="text-xl font-bold mb-4 text-slate-800 dark:text-slate-100">
                {title}
            </h3>
        )
    }
    {
        description && (
            <p class="text-slate-600 dark:text-slate-400 mb-6">{description}</p>
        )
    }

    <div class="steps-container space-y-0">
        <slot />
    </div>
</div>

<style is:global>
    .steps-container {
        counter-reset: step;
    }
    .step-number::before {
        counter-increment: step;
        content: counter(step);
    }
    .step-item:last-child .step-line {
        display: none;
    }
</style>
