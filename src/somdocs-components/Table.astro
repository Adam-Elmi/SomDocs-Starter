---
type Props = {
  headers: string[];
  body: { row: string[] }[];
  width: string | number;
};
const { headers, body, width = "100%" } = Astro.props as Props;
---

<div
  class="my-6 w-full overflow-x-auto rounded-lg border border-slate-200 dark:border-slate-800 shadow-sm"
>
  <table
    class="som-table w-full text-left text-sm text-slate-600 dark:text-slate-400"
  >
    <thead
      class="bg-slate-50 dark:bg-slate-900/50 text-slate-900 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800"
    >
      <tr>
        {
          headers && headers.length > 0
            ? headers.map((header) => (
                <th class="px-6 py-3 font-semibold tracking-wide">{header}</th>
              ))
            : null
        }
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
      {
        body && body.length > 0
          ? body.map((data) => (
              <tr class="hover:bg-slate-50/80 dark:hover:bg-slate-800/40 transition-colors bg-white dark:bg-[#11111b]">
                {data.row && data.row.length > 0
                  ? data.row.map((rowData) => (
                      <td class="px-6 py-3 whitespace-nowrap">{rowData}</td>
                    ))
                  : null}
              </tr>
            ))
          : null
      }
    </tbody>
  </table>
</div>
